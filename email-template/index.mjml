<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="'Space Grotesk', 'Helvetica Neue', Arial, sans-serif" />
      <mj-text font-size="15px" line-height="1.8" color="#333333" />
      <mj-section padding="0" />
    </mj-attributes>
    <mj-style>
      /* Main headings */
      h1 { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; color: #503666; margin: 0 0 8px 0; font-size: 34px; font-weight: 700; }
      h2 { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; color: #503666; margin: 32px 0 16px 0; font-size: 22px; font-weight: 600; border-bottom: 3px solid #503666; padding-bottom: 12px; }
      h2:first-of-type { margin-top: 0; }
      h3 { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; color: #503666; margin: 28px 0 14px 0; font-size: 19px; font-weight: 600; padding-bottom: 10px; border-bottom: 2px solid #f0ebf4; }
      
      /* Subsection headers - pill style labels */
      h4 { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; color: #503666; font-size: 11px; font-weight: 700; margin: 24px 0 12px 0; text-transform: uppercase; letter-spacing: 1.5px; display: inline-block; background: #f0ebf4; padding: 8px 14px; border-radius: 4px; border-left: 3px solid #503666; }
      
      /* Paragraphs and lists */
      p { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; margin: 0 0 15px 0; color: #333333; }
      ul, ol { margin: 15px 0; padding-left: 20px; }
      li { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; margin-bottom: 10px; color: #333333; }
      
      /* Text styling */
      strong { color: #503666; font-weight: 600; }
      a { color: #503666; }
      
      /* Coral highlight bar for underlined text */
      u { text-decoration: none; background: linear-gradient(to top, #FE8383 30%, transparent 30%); padding-bottom: 2px; }
      .highlight { text-decoration: none; background: linear-gradient(to top, #FE8383 30%, transparent 30%); padding-bottom: 2px; }
      
      /* Blockquotes */
      blockquote { border-left: 5px solid #503666; margin: 24px 0; padding: 20px 24px; background: linear-gradient(135deg, #faf8fb 0%, #f5f0f8 100%); font-style: italic; border-radius: 0 8px 8px 0; }
      
      /* Section dividers */
      hr { border: none; height: 2px; background: linear-gradient(90deg, #503666 0%, #8b6b9e 30%, #e8e0ed 70%, transparent 100%); margin: 36px 0; border-radius: 2px; }
    </mj-style>
    <mj-font name="Space Grotesk" href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" />
  </mj-head>

  <mj-body background-color="#ebe7ed" width="700px">

    <!-- Header - Purple background with white logo -->
    <mj-section background-color="#503666" padding="28px 24px">
      <mj-column vertical-align="middle">
        <mj-image src="img/lilee-logo-white.png" alt="Lilee" width="110px" align="left" />
      </mj-column>
      <mj-column vertical-align="middle">
        <mj-text align="right" padding="0">
          <span style="display:inline-block;background:#FE8383;padding:8px 16px;border-radius:20px;font-weight:600;font-size:12px;letter-spacing:1px;text-transform:uppercase;color:#ffffff;">Product Update</span>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Accent Bar - Purple and Coral -->
    <mj-section padding="0">
      <mj-column width="60%" padding="0">
        <mj-divider border-color="#503666" border-width="8px" padding="0" />
      </mj-column>
      <mj-column width="40%" padding="0">
        <mj-divider border-color="#FE8383" border-width="8px" padding="0" />
      </mj-column>
    </mj-section>

    <!-- Title Section -->
    <mj-section background-color="#ffffff" padding="40px 24px 20px 24px">
      <mj-column>
        <mj-text padding="0 0 16px 0">
          <span style="display:inline-block;background:#f0ebf4;padding:6px 14px;border-radius:4px;font-weight:600;font-size:12px;color:#503666;">{DATA_VARIABLE:issue_date}</span>
        </mj-text>
        <mj-text font-size="38px" font-weight="700" color="#503666" line-height="1.1" letter-spacing="-0.5px" padding="0">
          {DATA_VARIABLE:issue_title}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Highlights Box - Purple with coral accent -->
    <mj-section background-color="#ffffff" padding="12px 24px 28px 24px">
      <mj-column background-color="#503666" border-radius="8px" padding="24px">
        <mj-text color="#FE8383" font-size="11px" font-weight="700" padding="0 0 12px 0" text-transform="uppercase" letter-spacing="2px">
          ✨ This Week's Highlights
        </mj-text>
        <mj-text color="#ffffff" font-size="16px" line-height="1.7" padding="0">
          {DATA_VARIABLE:highlights}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Light Coral Divider -->
    <mj-section background-color="#ffffff" padding="0 24px">
      <mj-column>
        <mj-divider border-color="#FFB8B8" border-width="3px" padding="0" />
      </mj-column>
    </mj-section>

    <!-- Content -->
    <mj-section background-color="#ffffff" padding="28px 24px 24px 24px">
      <mj-column>
        <mj-text padding="0">
          {DATA_VARIABLE:content_html}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Collateral -->
    <mj-section background-color="#ffffff" padding="0 24px 40px 24px">
      <mj-column>
        <mj-text padding="0">
          {DATA_VARIABLE:collateral_html}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer Accent Bar - Coral and Purple -->
    <mj-section padding="0">
      <mj-column width="40%" padding="0">
        <mj-divider border-color="#FE8383" border-width="8px" padding="0" />
      </mj-column>
      <mj-column width="60%" padding="0">
        <mj-divider border-color="#503666" border-width="8px" padding="0" />
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#503666" padding="36px 24px">
      <mj-column vertical-align="top">
        <mj-image src="img/lilee-logo-white.png" alt="Lilee" width="90px" align="left" padding="0 0 14px 0" />
        <mj-text color="rgba(255,255,255,0.8)" font-size="14px" line-height="1.6" padding="0 0 20px 0">
          The agentic platform for<br/>population health management
        </mj-text>
        <mj-text padding="0">
          <a href="https://lilee.ai" style="text-decoration:none;display:inline-block;margin-right:12px;background:rgba(255,255,255,0.1);padding:10px 12px;border-radius:6px;">
            <img src="img/website-icon-white.png" alt="Website" width="20" style="vertical-align:middle;" />
          </a>
          <a href="https://www.linkedin.com/company/lilee-ai/" style="text-decoration:none;display:inline-block;background:rgba(255,255,255,0.1);padding:10px 12px;border-radius:6px;">
            <img src="img/linkedin-icon-white.png" alt="LinkedIn" width="20" style="vertical-align:middle;" />
          </a>
        </mj-text>
      </mj-column>
      <mj-column vertical-align="top">
        <mj-text align="right" color="rgba(255,255,255,0.5)" font-size="11px" font-weight="600" padding="0 0 12px 0" text-transform="uppercase" letter-spacing="1px">
          Quick Links
        </mj-text>
        <mj-text align="right" color="rgba(255,255,255,0.7)" font-size="13px" line-height="2" padding="0">
          <a href="https://lilee.ai" style="color:rgba(255,255,255,0.8);text-decoration:none;">Visit Website</a><br/>
          <a href="mailto:olivier@lilee.ai" style="color:rgba(255,255,255,0.8);text-decoration:none;">Contact Us</a>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Copyright -->
    <mj-section background-color="#3d2a4a" padding="14px 24px">
      <mj-column>
        <mj-text align="center" color="rgba(255,255,255,0.4)" font-size="11px" padding="0">
          © 2026 Lilee AI. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
