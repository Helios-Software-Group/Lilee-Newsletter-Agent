<mjml>
  <mj-head>
    <!-- Wider container for desktop (700px instead of default 600px) -->
    <mj-breakpoint width="480px" />
    <mj-attributes>
      <mj-all font-family="Arial, Helvetica, sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#333333" />
      <mj-section padding="0" />
      <mj-body width="700px" />
    </mj-attributes>
    <mj-style>
      /* Main headings - larger for desktop */
      h1 { color: #503666; margin: 0 0 12px 0; font-size: 32px; }
      h2 { color: #503666; margin: 35px 0 18px 0; font-size: 26px; border-bottom: 2px solid #f0ebf4; padding-bottom: 12px; }
      h3 { color: #503666; margin: 28px 0 12px 0; font-size: 20px; }

      /* Subsection headers - uppercase labels */
      h4 {
        color: #503666;
        font-size: 14px;
        font-weight: 700;
        margin: 28px 0 12px 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      /* Paragraphs - slightly larger */
      p { margin: 0 0 18px 0; color: #333333; font-size: 17px; line-height: 1.7; }

      /* Lists - more spacing */
      ul, ol { margin: 18px 0; padding-left: 24px; }
      li { margin-bottom: 12px; color: #333333; font-size: 17px; line-height: 1.6; }

      /* Nested lists - indented */
      ul ul, ol ul, ul ol, ol ol {
        margin-left: 24px;
        margin-top: 10px;
        margin-bottom: 10px;
      }

      /* Text styling */
      strong { color: #503666; }
      em { font-style: italic; color: #666666; }
      a { color: #503666; }

      /* Blockquotes - more padding */
      blockquote { border-left: 4px solid #503666; margin: 24px 0; padding: 18px 24px; background: #f8f5fa; font-style: italic; font-size: 17px; }

      /* Section dividers */
      hr {
        border: none;
        border-top: 2px solid #e8e0ed;
        margin: 40px 0;
      }

      /* Feature section boxes */
      .feature-box {
        background: #faf8fb;
        border-radius: 8px;
        padding: 24px;
        margin: 24px 0;
        border-left: 4px solid #503666;
      }

      /* Images - full width with better spacing */
      img { max-width: 100%; height: auto; margin: 20px 0; border-radius: 8px; }

      /* Highlight box styling */
      .highlight-box div { border-radius: 8px; border-left: 4px solid #503666; }
    </mj-style>
  </mj-head>

  <mj-body background-color="#f4f4f4">

    <!-- Header -->
    <mj-section background-color="#503666" padding="24px 40px">
      <mj-column width="40%">
        <mj-image src="img/lilee-logo-white.png" alt="Lilee" width="100px" align="left" />
      </mj-column>
      <mj-column width="60%">
        <mj-text align="right" padding-top="8px">
          <a href="https://lilee.ai" style="text-decoration: none; margin-right: 16px;">
            <img src="img/website-icon-white.png" alt="Website" width="22" style="vertical-align: middle;" />
          </a>
          <a href="https://www.linkedin.com/company/lilee-ai/" style="text-decoration: none;">
            <img src="img/linkedin-icon-white.png" alt="LinkedIn" width="22" style="vertical-align: middle;" />
          </a>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Title -->
    <mj-section background-color="#ffffff" padding="45px 50px 20px 50px">
      <mj-column>
        <mj-text font-size="32px" font-weight="bold" color="#503666" line-height="1.2">
          {DATA_VARIABLE:issue_title}
        </mj-text>
        <mj-text font-size="15px" color="#888888" padding-top="12px">
          {DATA_VARIABLE:issue_date}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Highlights -->
    <mj-section background-color="#ffffff" padding="15px 50px 25px 50px">
      <mj-column>
        <mj-text background-color="#f8f5fa" padding="24px" css-class="highlight-box">
          <strong style="color: #503666; font-size: 14px; text-transform: uppercase; letter-spacing: 1px;">This Week</strong><br/><br/>
          {DATA_VARIABLE:highlights}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Divider -->
    <mj-section background-color="#ffffff" padding="0 50px">
      <mj-column>
        <mj-divider border-color="#e0e0e0" border-width="1px" />
      </mj-column>
    </mj-section>

    <!-- Content -->
    <mj-section background-color="#ffffff" padding="25px 50px 25px 50px">
      <mj-column>
        <mj-text font-size="17px" line-height="1.7">
          {DATA_VARIABLE:content_html}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Collateral (GIFs, images, videos) - optional -->
    <mj-section background-color="#ffffff" padding="0 50px 50px 50px">
      <mj-column>
        <mj-text>
          {DATA_VARIABLE:collateral_html}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#503666" padding="35px">
      <mj-column>
        <mj-image src="img/lilee-logo-white.png" alt="Lilee" width="80px" align="center" padding-bottom="12px" />
        <mj-text align="center" color="rgba(255,255,255,0.7)" font-size="14px" padding-bottom="16px">
          Transform Healthcare Ops Fast
        </mj-text>
        <mj-text align="center">
          <a href="https://lilee.ai" style="text-decoration: none; margin-right: 20px;">
            <img src="img/website-icon-white.png" alt="Website" width="24" style="vertical-align: middle;" />
          </a>
          <a href="https://www.linkedin.com/company/lilee-ai/" style="text-decoration: none;">
            <img src="img/linkedin-icon-white.png" alt="LinkedIn" width="24" style="vertical-align: middle;" />
          </a>
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
