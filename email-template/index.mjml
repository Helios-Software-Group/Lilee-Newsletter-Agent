<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Arial, Helvetica, sans-serif" />
      <mj-text font-size="16px" line-height="1.6" color="#333333" />
      <mj-section padding="0" />
    </mj-attributes>
    <mj-style>
      h1 { color: #503666; margin: 0 0 10px 0; font-size: 28px; }
      h2 { color: #503666; margin: 30px 0 15px 0; font-size: 22px; border-bottom: 2px solid #f0ebf4; padding-bottom: 10px; }
      h3 { color: #503666; margin: 25px 0 10px 0; font-size: 18px; }
      p { margin: 0 0 15px 0; color: #333333; }
      ul { margin: 15px 0; padding-left: 20px; }
      li { margin-bottom: 10px; color: #333333; }
      strong { color: #503666; }
      em { font-style: italic; color: #666666; }
      a { color: #503666; }
      blockquote { border-left: 4px solid #503666; margin: 20px 0; padding: 15px 20px; background: #f8f5fa; font-style: italic; }
    </mj-style>
  </mj-head>

  <mj-body background-color="#f4f4f4">

    <!-- Header -->
    <mj-section background-color="#503666" padding="20px 30px">
      <mj-column>
        <mj-image src="img/lilee-logo-white.png" alt="Lilee" width="90px" align="left" />
      </mj-column>
      <mj-column>
        <mj-text align="right" font-size="12px" color="rgba(255,255,255,0.7)" padding-top="10px">
          Product Newsletter
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Title -->
    <mj-section background-color="#ffffff" padding="35px 30px 15px 30px">
      <mj-column>
        <mj-text font-size="28px" font-weight="bold" color="#503666" line-height="1.2">
          {DATA_VARIABLE:issue_title}
        </mj-text>
        <mj-text font-size="14px" color="#888888" padding-top="10px">
          {DATA_VARIABLE:issue_date}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Highlights -->
    <mj-section background-color="#ffffff" padding="10px 30px 20px 30px">
      <mj-column>
        <mj-text background-color="#f8f5fa" padding="20px" border-radius="8px" border-left="4px solid #503666">
          <strong style="color: #503666; font-size: 13px; text-transform: uppercase; letter-spacing: 1px;">This Week</strong><br/><br/>
          {DATA_VARIABLE:highlights}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Divider -->
    <mj-section background-color="#ffffff" padding="0 30px">
      <mj-column>
        <mj-divider border-color="#e0e0e0" border-width="1px" />
      </mj-column>
    </mj-section>

    <!-- Content -->
    <mj-section background-color="#ffffff" padding="20px 30px 20px 30px">
      <mj-column>
        <mj-text>
          {DATA_VARIABLE:content_html}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Collateral (GIFs, images, videos) - optional -->
    <mj-section background-color="#ffffff" padding="0 30px 40px 30px">
      <mj-column>
        <mj-text>
          {DATA_VARIABLE:collateral_html}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#503666" padding="30px">
      <mj-column>
        <mj-image src="img/lilee-logo-white.png" alt="Lilee" width="70px" align="center" padding-bottom="10px" />
        <mj-text align="center" color="rgba(255,255,255,0.7)" font-size="13px">
          Transform Healthcare Ops Fast
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
