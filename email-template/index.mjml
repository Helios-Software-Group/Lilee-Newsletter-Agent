<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="'Space Grotesk', 'Helvetica Neue', Arial, sans-serif" />
      <mj-text font-size="15px" line-height="1.8" color="#333333" />
      <mj-section padding="0" />
    </mj-attributes>
    <mj-style>
      h1 { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; color: #503666; margin: 0 0 8px 0; font-size: 34px; font-weight: 700; }
      h2 { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; color: #503666; margin: 28px 0 14px 0; font-size: 22px; font-weight: 600; border-bottom: 2px solid #FFCDDE; padding-bottom: 10px; }
      h3 { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; color: #503666; margin: 24px 0 10px 0; font-size: 18px; font-weight: 600; }
      h4 { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; color: #503666; font-size: 12px; font-weight: 700; margin: 24px 0 10px 0; text-transform: uppercase; letter-spacing: 1.5px; }
      p { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; margin: 0 0 15px 0; color: #333333; }
      ul, ol { margin: 15px 0; padding-left: 20px; }
      li { font-family: 'Space Grotesk', 'Helvetica Neue', Arial, sans-serif; margin-bottom: 10px; color: #333333; }
      strong { color: #503666; font-weight: 600; }
      a { color: #503666; }
    </mj-style>
    <mj-font name="Space Grotesk" href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" />
  </mj-head>

  <mj-body background-color="#f8f6f9" width="700px">

    <!-- Header - Purple background with white logo -->
    <mj-section background-color="#503666" padding="20px 24px">
      <mj-column vertical-align="middle">
        <mj-image src="img/lilee-logo-white.png" alt="Lilee" width="90px" align="left" />
      </mj-column>
      <mj-column vertical-align="middle">
        <mj-text align="right" padding="0">
          <span style="display:inline-block;background:#FAA293;padding:8px 16px;border-radius:20px;font-weight:600;font-size:11px;letter-spacing:1px;text-transform:uppercase;color:#503666;">Product Update</span>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Accent stripe - salmon/coral gradient effect -->
    <mj-section padding="0">
      <mj-column width="33.33%" padding="0">
        <mj-divider border-color="#FAA293" border-width="4px" padding="0" />
      </mj-column>
      <mj-column width="33.33%" padding="0">
        <mj-divider border-color="#FE8383" border-width="4px" padding="0" />
      </mj-column>
      <mj-column width="33.33%" padding="0">
        <mj-divider border-color="#FFCDDE" border-width="4px" padding="0" />
      </mj-column>
    </mj-section>

    <!-- Title Section -->
    <mj-section background-color="#ffffff" padding="32px 24px 8px 24px">
      <mj-column>
        <mj-text font-size="32px" font-weight="700" color="#503666" line-height="1.2" letter-spacing="-0.5px" padding="0">
          {DATA_VARIABLE:issue_title}
        </mj-text>
        <mj-text padding="10px 0 0 0">
          <span style="display:inline-block;background:#f0ebf4;padding:5px 12px;border-radius:4px;font-weight:500;font-size:12px;color:#503666;">{DATA_VARIABLE:issue_date}</span>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Highlights Box - Clean single-color design -->
    <mj-section background-color="#ffffff" padding="20px 24px 24px 24px">
      <mj-column background-color="#FE8383" border-radius="10px" padding="20px 22px">
        <mj-text color="rgba(255,255,255,0.85)" font-size="10px" font-weight="700" padding="0 0 8px 0" text-transform="uppercase" letter-spacing="1.5px">
          This Week's Highlights
        </mj-text>
        <mj-text color="#ffffff" font-size="16px" line-height="1.65" font-weight="500" padding="0">
          {DATA_VARIABLE:highlights}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Divider -->
    <mj-section background-color="#ffffff" padding="0 24px 16px 24px">
      <mj-column>
        <mj-divider border-color="#f0ebf4" border-width="1px" padding="0" />
      </mj-column>
    </mj-section>

    <!-- Content -->
    <mj-section background-color="#ffffff" padding="8px 24px 24px 24px">
      <mj-column>
        <mj-text padding="0">
          {DATA_VARIABLE:content_html}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Collateral -->
    <mj-section background-color="#ffffff" padding="0 24px 36px 24px">
      <mj-column>
        <mj-text padding="0">
          {DATA_VARIABLE:collateral_html}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Footer Accent - matching header stripe -->
    <mj-section padding="0">
      <mj-column width="33.33%" padding="0">
        <mj-divider border-color="#FFCDDE" border-width="4px" padding="0" />
      </mj-column>
      <mj-column width="33.33%" padding="0">
        <mj-divider border-color="#FE8383" border-width="4px" padding="0" />
      </mj-column>
      <mj-column width="33.33%" padding="0">
        <mj-divider border-color="#FAA293" border-width="4px" padding="0" />
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#503666" padding="32px 24px">
      <mj-column vertical-align="top">
        <mj-image src="img/lilee-logo-white.png" alt="Lilee" width="85px" align="left" padding="0 0 12px 0" />
        <mj-text color="rgba(255,255,255,0.8)" font-size="13px" line-height="1.5" padding="0 0 16px 0">
          The agentic platform for<br/>population health management
        </mj-text>
        <mj-text padding="0">
          <a href="https://lilee.ai" style="text-decoration:none;display:inline-block;margin-right:10px;background:rgba(255,255,255,0.15);padding:8px 10px;border-radius:6px;">
            <img src="img/website-icon-white.png" alt="Website" width="18" style="vertical-align:middle;" />
          </a>
          <a href="https://www.linkedin.com/company/lilee-ai/" style="text-decoration:none;display:inline-block;background:rgba(255,255,255,0.15);padding:8px 10px;border-radius:6px;">
            <img src="img/linkedin-icon-white.png" alt="LinkedIn" width="18" style="vertical-align:middle;" />
          </a>
        </mj-text>
      </mj-column>
      <mj-column vertical-align="top">
        <mj-text align="right" color="rgba(255,255,255,0.6)" font-size="10px" font-weight="600" padding="0 0 10px 0" text-transform="uppercase" letter-spacing="1px">
          Quick Links
        </mj-text>
        <mj-text align="right" color="rgba(255,255,255,0.8)" font-size="13px" line-height="2" padding="0">
          <a href="https://lilee.ai" style="color:rgba(255,255,255,0.9);text-decoration:none;">Visit Website</a><br/>
          <a href="mailto:olivier@lilee.ai" style="color:rgba(255,255,255,0.9);text-decoration:none;">Contact Us</a>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Copyright -->
    <mj-section background-color="#3d2a4a" padding="12px 24px">
      <mj-column>
        <mj-text align="center" color="rgba(255,255,255,0.5)" font-size="10px" padding="0">
          Â© 2026 Lilee AI. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
