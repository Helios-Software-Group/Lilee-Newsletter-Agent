# Anthropic API
ANTHROPIC_API_KEY=sk-ant-...

# Notion API
NOTION_API_KEY=secret_...

# Notion Database IDs (found in database URLs)
NOTION_MEETING_NOTES_DB_ID=your-meeting-notes-db-id
NOTION_MEETINGS_DB_ID=your-meetings-db-id
NOTION_NEWSLETTER_DB_ID=your-newsletter-db-id
NOTION_SPRINTS_DB_ID=your-sprints-db-id

# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Slack Bot (for /newsletter slash commands)
# Get these from your Slack app: api.slack.com/apps â†’ Basic Information + OAuth & Permissions
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=your-signing-secret

# Loops API for email automation
LOOPS_API_KEY=your-loops-api-key
LOOPS_TRANSACTIONAL_ID=your-transactional-email-id

# Notion Webhook Secret (for auto-send on status change)
# Generate a random string: openssl rand -hex 32
NOTION_WEBHOOK_SECRET=your-webhook-secret

# Tasks Database (for completed tasks in newsletter)
NOTION_TASKS_DB_ID=your-tasks-database-id

# Subscribers Database (for newsletter recipients)
# Must have: Email (email), First Name (text), Subscribed (checkbox)
NOTION_SUBSCRIBERS_DB_ID=your-subscribers-database-id

# Test recipient (used for test sends and fallbacks)
# Set this to YOUR email so test sends go to you, not a hardcoded address
TEST_EMAIL=your-email@example.com
TEST_EMAIL_NAME=Your Name

# Supabase Storage (for permanent image hosting)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_BUCKET=newsletter-images
